[flake8]
# Maximum line length
max-line-length = 120

# Maximum complexity
max-complexity = 15

# Ignore specific errors/warnings
ignore = E203,E501,W503,E402,F401,F541,W293
    
# Exclude directories
exclude =
    .git,
    __pycache__,
    .databricks,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    notebooks/.ipynb_checkpoints

# Per-file ignores for Databricks notebook files and tests
per-file-ignores =
    src/analytics/*.py:F821,F403,F405
    src/bronze/*.py:F821,F403,F405
    src/pipelines/*.py:F821,F403,F405
    src/gold/*.py:F821,F403,F405
    src/ml/*.py:F821,F403,F405
    src/chatbot/*.py:F821,F403,F405
    src/transformations/*.py:F821,F403,F405
    tests/*.py:E712,E722,F841,W291
    tests/*/*.py:E712,E722,F841,W291

# File patterns to check
filename = *.py

# Show source code for each error
show-source = True

# Show statistics
statistics = True

# Count errors
count = True

