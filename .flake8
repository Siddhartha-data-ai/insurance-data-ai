[flake8]
# Maximum line length
max-line-length = 120

# Maximum complexity
max-complexity = 15

# Ignore specific errors/warnings
ignore = E203,E501,W503,E402,F401
    
# Exclude directories
exclude =
    .git,
    __pycache__,
    .databricks,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    notebooks/.ipynb_checkpoints

# File patterns to check
filename = *.py

# Show source code for each error
show-source = True

# Show statistics
statistics = True

# Count errors
count = True

